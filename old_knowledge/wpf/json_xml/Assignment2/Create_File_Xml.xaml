<Window x:Class="Assignment2.Create_File_Xml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment2"
        mc:Ignorable="d"
        Title="Create" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="18,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58"><Run Language="vi-vn" Text="Path:"/></TextBlock>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="19" Margin="10,20,0,0" VerticalAlignment="Top" Width="58"/>

        <TextBox x:Name="Path_To_Create" HorizontalAlignment="Left" Height="30" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" TextChanged="Path_To_Create_TextChanged" />
        <Button Content="***" HorizontalAlignment="Left" Height="27" Margin="232,45,0,0" VerticalAlignment="Top" Width="46" Click="Click_Choose_Path"/>
        
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="18,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.519,0.837"><Run Text="Object"/><Run Language="vi-vn" Text=":"/></TextBlock>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="19" Margin="10,100,0,0" VerticalAlignment="Top" Width="58"/>

        <ComboBox x:Name="Object_Selected" HorizontalAlignment="Left" Height="28" Margin="10,124,0,0" VerticalAlignment="Top" Width="204" SelectionChanged="Object_Want_Create_Xml"/>
        <Button Content="Create" HorizontalAlignment="Left" Height="28" Margin="232,124,0,0" VerticalAlignment="Top" Width="46" Click="Click_To_Create" FontSize="10"/>
        
    </Grid>
</Window>
