<Window x:Class="AirConditionerShop_NguyenHoangAn.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop_NguyenHoangAn"
        mc:Ignorable="d"
        Title="Login Window" Height="330" Width="600" FontFamily="Arial" FontSize="14" Background="#FFD4F7D4" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Email:" HorizontalAlignment="Center" Height="66" Margin="0,52,0,0" VerticalAlignment="Top" Width="432" FontFamily="Arial Narrow" FontSize="12pt" Foreground="Blue"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Height="36" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="432" TextAlignment="Right"/>

        <Label Content="Password:" HorizontalAlignment="Center" Height="66" Margin="0,143,0,0" VerticalAlignment="Top" Width="432" Foreground="Blue"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Height="36" Margin="0,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="432" TextAlignment="Right" />
        <Button Content="Login" HorizontalAlignment="Center" Height="40" Margin="0,243,0,0" VerticalAlignment="Top" Width="114" Click="Button_Click"/>
        
    </Grid>
</Window>
